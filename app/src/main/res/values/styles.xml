<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.Demo.BottomSheetDialog</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:letterSpacing">0</item>
        <!--        <item name="android:fontFamily">sans-serif</item>-->
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:foreground">?selectableItemBackgroundBorderless</item>
        <item name="android:paddingStart">@dimen/default_margin_8</item>
        <item name="android:paddingEnd">@dimen/default_margin_8</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="ButtonOutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:background">@drawable/bg_pin_btn</item>
        <!--        <item name="android:fontFamily">sans-serif</item>-->
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:foreground">?selectableItemBackgroundBorderless</item>
        <item name="android:paddingStart">@dimen/default_margin_8</item>
        <item name="android:paddingEnd">@dimen/default_margin_8</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="strokeColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Dialog.Custom" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialog.ButtonColor</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialog.ButtonColor</item>
    </style>

    <style name="AlertDialog.ButtonColor" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style
        name="ThemeOverlay.Demo.BottomSheetDialog"
        parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.Demo.BottomSheet</item>
    </style>

    <style name="Widget.Demo.BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Demo</item>
    </style>

    <style name="ShapeAppearanceOverlay.Demo" parent="">
        <item name="cornerSize">@dimen/default_margin_16</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="SystemNotificationCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay</item>
    </style>

    <style name="ShapeAppearanceOverlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/default_margin_16</item>
        <item name="cornerSizeTopLeft">@dimen/default_margin_16</item>
        <item name="cornerSizeBottomRight">@dimen/default_margin_16</item>
        <item name="cornerSizeBottomLeft">@dimen/default_margin_16</item>
    </style>

    <style name="TextInputLayoutOutlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">@color/colorHint</item>
        <item name="startIconTint">@color/colorHighlight</item>
    </style>

    <style name="EditTextOutlined" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="TextInputLayoutExposed" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">@color/colorHint</item>
        <item name="startIconTint">@color/colorHighlight</item>
    </style>

    <style name="AutocompleteViewOutlined" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:buttonTint">@color/colorHighlight</item>
        <item name="android:paddingStart">@dimen/default_margin_16</item>
        <item name="android:paddingEnd">@dimen/default_margin_16</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="Text" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:foreground">?selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/font_14</item>
    </style>

    <style name="Text.Hint">
        <item name="android:textColor">@color/colorHint</item>
    </style>

    <style name="Text.12">
        <item name="android:textSize">@dimen/font_12</item>
    </style>

    <style name="Text.12.Hint">
        <item name="android:textColor">@color/colorHint</item>
    </style>

    <style name="Text.16">
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="Text.18">
        <item name="android:textSize">@dimen/font_18</item>
    </style>

    <style name="Text.18.Hint">
        <item name="android:textColor">@color/colorHint</item>
    </style>

    <style name="Text.16.Hint">
        <item name="android:textColor">@color/colorHint</item>
    </style>

    <style name="Text.20">
        <item name="android:textSize">@dimen/font_20</item>
    </style>

    <style name="Text.20.Hint">
        <item name="android:textColor">@color/colorHint</item>
    </style>

    <style name="Text.24">
        <item name="android:textSize">@dimen/font_24</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>

    <style name="Text.24.Hint">
        <item name="android:textColor">@color/colorHint</item>
    </style>

    <style name="Text.20.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.30">
        <item name="android:textSize">@dimen/font_30</item>
    </style>

    <style name="Text.White">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="Text.White.22">
        <item name="android:textSize">@dimen/font_22</item>
    </style>

</resources>
