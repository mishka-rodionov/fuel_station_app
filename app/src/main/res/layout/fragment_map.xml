<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mlMap"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    mapbox:layoutDescription="@xml/fragment_map_scene"
    >

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guidelineMapFragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        mapbox:mapbox_cameraZoom="3" />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guidelineMapFragment"
        app:layout_constraintGuide_percent=".25"
        android:orientation="horizontal"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView"
        style="@style/SystemNotificationCardView"
        app:layout_constraintTop_toBottomOf="@id/guidelineMapFragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/default_margin_4"
        android:clipToPadding="true"
        app:cardBackgroundColor="@color/green_light"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/default_margin_16"
        android:paddingBottom="@dimen/default_margin_16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivVpBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/default_margin_8"
                android:src="@drawable/ic_back"
                app:tint="@color/colorBlack" />

            <TextView
                android:id="@+id/tvTitleBottomSheet"
                style="@style/Text.16"
                android:layout_width="wrap_content"
                android:layout_margin="@dimen/default_margin_16"
                android:layout_weight="1"
                android:lineSpacingMultiplier="1.3"
                android:gravity="center"
                android:fontFamily="sans-serif-medium"
                android:text="Выберите удобный для вас способ добавления документов"/>

            <ImageView
                android:id="@+id/ivVpForward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/default_margin_8"
                android:rotation="180"
                android:src="@drawable/ic_back"
                app:tint="@color/colorBlack" />

        </LinearLayout>

    </LinearLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vpFuelStationCreate"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


<!--    <Button-->
<!--        android:id="@+id/btnTest"-->
<!--        style="@style/Button"-->
<!--        android:text="Test"/>-->


</androidx.constraintlayout.motion.widget.MotionLayout>