<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layoutDescription="@xml/item_fuel_station_scene">

    <TextView
        android:id="@+id/tvBrand"
        style="@style/Text.24"
        android:layout_width="0dp"
        android:fontFamily="sans-serif-condensed-medium"
        app:layout_constraintBottom_toBottomOf="@id/tvDistanceToGo"
        app:layout_constraintEnd_toStartOf="@+id/tvDistanceToGo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Lukoil" />

    <TextView
        android:id="@+id/tvDistanceToGo"
        style="@style/Text.24.Hint"
        android:layout_width="0dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="end"
        app:layout_constraintBottom_toBottomOf="@+id/tvBrand"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvBrand"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="6.92 km" />

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_margin_1"
        android:layout_marginTop="@dimen/default_margin_4"
        android:layout_marginBottom="@dimen/default_margin_4"
        android:background="@color/colorGray"
        app:layout_constraintTop_toBottomOf="@id/tvBrand" />

    <com.rodionov.oktan.presentation.common.view.FuelTypeView
        android:layout_width="@dimen/default_margin_40"
        android:layout_height="@dimen/default_margin_40"
        android:layout_marginTop="@dimen/default_margin_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider1" />

</androidx.constraintlayout.motion.widget.MotionLayout>