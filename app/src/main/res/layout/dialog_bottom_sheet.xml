<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/default_margin_16"
    android:paddingBottom="@dimen/default_margin_16"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivVpBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_margin_8"
            android:src="@drawable/ic_back"
            app:tint="@color/colorBlack" />

        <TextView
            android:id="@+id/tvTitleBottomSheet"
            style="@style/Text.16"
            android:layout_width="wrap_content"
            android:layout_margin="@dimen/default_margin_16"
            android:layout_weight="1"
            android:lineSpacingMultiplier="1.3"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:text="Выберите удобный для вас способ добавления документов"/>

        <ImageView
            android:id="@+id/ivVpForward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_margin_8"
            android:rotation="180"
            android:src="@drawable/ic_back"
            app:tint="@color/colorBlack" />

    </LinearLayout>



    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vpFuelStationCreate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>