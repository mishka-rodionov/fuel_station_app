<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/default_margin_16"
    android:paddingBottom="@dimen/default_margin_16"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitleBottomSheet"
        style="@style/Text.16"
        android:layout_margin="@dimen/default_margin_16"
        android:lineSpacingMultiplier="1.3"
        android:gravity="center"
        android:fontFamily="sans-serif-medium"
        tools:text="Выберите удобный для вас способ добавления документов"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBottomSheetDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/item_dialog_bottom_sheet" />

</LinearLayout>